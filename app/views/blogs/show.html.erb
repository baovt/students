<div class="span-17 colborder">
    <div class="span-12 caps">
      <h1><%= @blog.title %></h1>
    </div>
    <div class="span-5 last"><%= @blog.updated_at.strftime("%d/%m/%Y %H:%M") %>
    </div>
    <div class="span-17 last">By <%= @blog.user.email %></div>
    <div class="span-17 last"> 
        <p class="quiet">
          <%= raw @blog.content %>
        </p>
    </div>
   <div class="span-17 last"> 
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_blog_path(@blog) %> |
      <% end %>

      <%= link_to 'Back', blogs_path %>
   </div>
   
</div>

<div class="span-6 last"> 
  <ul>
  <% @blogs.each do |blog| %>
    <li><%= link_to blog.title, blog %></li>
  <% end %>
  </ul>
</div>
