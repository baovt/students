<% @blogs.each do |blog| %>
  <div class="span-17 colborder">
    <div class="span-12 caps">
      <h1><%= blog.title %></h1>
    </div>
    <div class="span-5 last"><%= blog.updated_at %></div>
    <div class="span-17 last">By <%= blog.user.email %></div>
    <div class="span-17 last"> 
        <p class="quiet">
          <%= raw blog.content %>
        </p>
    </div>
   
    <% if user_signed_in? %>
      <div class="span-17 last"> 
          <%= link_to 'Show', blog %>
          <%= link_to 'Edit', edit_blog_path(blog) %>
          <%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %>  
       </div>
     
    <% end %>
    <hr />
  </div>

<% end %>
 
<br />
<% if user_signed_in? %>
<%= link_to 'New Blog', new_blog_path %>
<% end %>

