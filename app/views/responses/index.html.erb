<h1>Listing responses</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Blog</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @responses.each do |response| %>
  <tr>
    <td><%= response.content %></td>
    <td><%= response.blog_id %></td>
    <td><%= response.user_id %></td>
    <td><%= link_to 'Show', [response.blog, response] %></td>
    <td><%= link_to 'Edit', edit_blog_response_path(response.blog, response) %></td>
    <td><%= link_to 'Destroy', [response.blog, response], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

