<div class="span-17 colborder">  
  <%= render @blog %>
  <div class="span-17 last">  

    <% @blog.responses.each do |response| %>
      <div class="box">
        <div class="append-1 caps"><%= response.content %></div>
        <div class="span-5 append-1 quiet">
          by <%= response.user.email %>
        </div>
        <div class="span-5 append-1 quiet"><%=  show_time(response.updated_at) %>
        </div>
        <div class="span-3 append-1 quiet last">
           <% if user_signed_in? and response.user.id == current_user.id  %>
                <%= link_to 'Edit', edit_blog_response_path(response.blog, response) %>
          <% end %>
        </div>
      </div>
    <% end %>  
   </div>  
  <% if user_signed_in?  %>  
    <div class="span-17 last">
      <h1>New response</h1>
      
      <%= render 'form' %>
    </div> 
  <% end %>
</div>
<%= render 'blogs/nav_blogs' %>
